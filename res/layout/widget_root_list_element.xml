<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget_list_element"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/widget_next_bus1_time"
            style="@style/widget_next_bus_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/widget_list_element_font_size"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/widget_next_bus1_linenumber"
                style="@style/widget_next_bus_line_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/widget_list_element_font_size"/>

        <TextView
                android:id="@+id/widget_next_bus1_last_bus_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/widget_list_element_font_size"/>

        <TextView
                android:id="@+id/widget_next_bus1_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textColor="@color/remark_emphasis"
                android:textSize="@dimen/widget_list_element_font_size"/>
    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"/>

</LinearLayout>