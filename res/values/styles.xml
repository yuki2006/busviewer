<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="widget_focus">
        <item name="android:background">@drawable/widget_style</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/widget_margin</item>
        <!--
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        -->
    </style>

    <style name="main_button_style">

        <!-- <item name="android:paddingTop">50dp</item> -->
        <item name="android:textSize">15sp</item>
        <!-- <item name="android:background">@drawable/main_button_skin</item> -->
    </style>

    <!-- ダイヤの曜日部分の　共通スタイル -->
    <style name="timeline_diagram_text">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
    </style>

    <style name="list_border" parent="android:Widget.ListView">
        <item name="android:divider">#555555</item>
        <item name="android:dividerHeight">1.5sp</item>
    </style>

    <style name="search_button_style" parent="android:Widget.EditText">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_handle" parent="android:Widget.TextView">
        <item name="android:color">#000000</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="widget_next_bus_text_view" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="widget_next_bus_line_number" parent="android:Widget.TextView">
        <item name="android:textColor">#00FFFF</item>
    </style>

</resources>